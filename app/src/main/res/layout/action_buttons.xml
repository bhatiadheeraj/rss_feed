<?xml version="1.0" encoding="utf-8"?>

<!-- Action buttons (Read more..., Share, Go back) -->

<android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Read more... -->
    <ImageButton
        style="@style/ActionButtonIcon"
        android:contentDescription="@string/desc"
        android:id="@+id/button_continue"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:src="?attr/webview_icon"
        app:layout_widthPercent="33.33%" />

    <!-- Share -->
    <ImageButton
        style="@style/ActionButtonIcon"
        android:contentDescription="@string/desc"
        android:id="@+id/button_share"
        android:src="?attr/share_icon"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_toEndOf="@id/button_continue"
        android:layout_toRightOf="@id/button_continue"
        app:layout_widthPercent="33.33%" />

    <!-- Back button -->
    <ImageButton
        style="@style/ActionButtonIcon"
        android:contentDescription="@string/desc"
        android:id="@+id/button_back"
        android:src="?attr/back_icon"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_toEndOf="@id/button_share"
        android:layout_toRightOf="@id/button_share"
        app:layout_widthPercent="33.33%" />

</android.support.percent.PercentRelativeLayout>
